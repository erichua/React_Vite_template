root = true

# Unix-style newlines with a newline ending every file
[*]

# 通用配置 -----------

# 缩进方式
indent_style = space
# 设置换行符，值为 lf(换行)、cr(回车) 和 crlf(回车换行)
end_of_line = lf
# 编码格式
charset = utf-8
# 是否删除行尾空格
trim_trailing_whitespace = true
# 缩进大小
indent_size = 4

# 匹配文件配置 -----------

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,jsx,ts,tsx}]
charset = utf-8
